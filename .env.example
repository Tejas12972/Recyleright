# RecycleRight Application Environment Variables

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your_secret_key_here

# Database Configuration
MONGODB_URI=mongodb://your_mongodb_connection_string
MONGODB_NAME=recycleright

# API Keys
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GEOLOCATION_API_KEY=your_geolocation_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Model Paths
MODEL_PATH=models/waste_classifier.tflite
LABELS_PATH=models/labels.txt

# Application Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB
ALLOWED_EXTENSIONS=png,jpg,jpeg

# Points System Configuration
POINTS_PER_SCAN=5
POINTS_PER_CORRECT_DISPOSAL=10
MAX_DAILY_POINTS=100

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/recycleright.log 